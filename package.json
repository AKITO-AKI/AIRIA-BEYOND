{
  "name": "airia-beyond",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm --workspace apps/web run dev\" \"npm run server:dev\"",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm run server:dev",
    "build": "npm --workspace apps/web run build",
    "build:web": "npm --workspace apps/web run build",
    "build:xserver": "npm --workspace apps/web run build:xserver",
    "deploy": "npm --workspace apps/web run deploy",
    "deploy:web": "npm --workspace apps/web run deploy",
    "start": "node server.js",
    "server:dev": "nodemon server.js",
    "preview": "npm --workspace apps/web run preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "smoke:comfyui": "node scripts/smoke-comfyui-direct.mjs",
    "smoke:image:comfyui": "node scripts/smoke-image-api-comfyui.mjs",
    "smoke:require": "node scripts/smoke-require.mjs ./server.js --timeout=5000",
    "smoke:music-controller": "node scripts/smoke-require.mjs ./api/controllers/music.js --timeout=5000",
    "smoke:artistic": "node scripts/smoke-artistic-pipeline.mjs",
    "smoke:e2e:http": "node scripts/smoke-e2e-http.mjs",
    "smoke:golden": "node scripts/smoke-golden-quality.mjs",
    "smoke:golden:full": "node scripts/smoke-golden-quality.mjs --full"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jose": "^5.10.0",
    "lru-cache": "^10.0.0",
    "midi-writer-js": "^3.1.1",
    "nodemailer": "^6.10.1",
    "openai": "^4.77.0",
    "pg": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.5.3"
  }
}
